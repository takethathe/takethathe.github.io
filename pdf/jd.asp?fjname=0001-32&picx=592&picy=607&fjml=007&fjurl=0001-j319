	fjxy="|638@154px|397@163px|152@157px|643@727px|400@727|150@737|625@1563|383@1565|138@1569px|632@2131px|382@2130px|138@2133|632@2963px|387@2968|144@2982|638@3532px|397@3533px|150@3541px|636@4354|394@4352px|129@4356px|624@4923|382@4922|137@4926px|642@5760|390@5765|145@5760|636@6330|391@6331px|147@6334|633@7164|387@7164|142@7165|632@7735|399@7741|138@7736|629@8571|388@8571|147@8570px|652@9142|389@9145px|146@9141px|641@9980px|397@9983px|151@9984|638@10547|396@10543px|152@10549px|642@11397|399@11397px|141@11401|623@11963|380@11963px|135@11959px|639@12803|389@12800|145@12797|627@13370|388@13367px|143@13362px|627@14188px|387@14187px|141@14196px|642@14747px|399@14755px|150@14766px|624@15584|384@15591px|142@15596px|647@16148px|387@16144px|145@16144px|628@16977|390@16983|146@16988|637@17544|394@17547|151@17549|641@18386|396@18384|149@18387px|631@18958|391@18956px|148@18956|629@19801|382@19803|139@19809|627@20366px|384@20363px|140@20374|635@21201|392@21201px|147@21206|637@21761|394@21767|NaN@undefined"; gs="1"; fjedit="True"; dwxy="1"; 	
