	fjxy="|624@168|382@167px|139@164px|621@744|382@742px|132@740|636@1564|395@1564px|153@1563px|633@2140px|388@2129px|147@2129px|601@2976px|360@2973|117@2972|606@3548px|368@3550px|126@3553px|618@4376|378@4380px|136@4385px|611@4953|372@4953|131@4951|625@5776|375@5781|137@5788|627@6350|388@6348|148@6351|614@7185|378@7188|136@7194|610@7762|380@7760|133@7765|614@8590|378@8590px|137@8587|623@9162px|371@9155|131@9156|617@9998|376@9992px|137@10007px|623@10569|380@10576|143@10582|614@11401|375@11401|129@11414px|613@11978|373@11987|132@11986|628@12808|375@12804px|136@12805|617@13372|379@13385|136@13379px|610@14200|366@14204|124@14212|614@14769|373@14768px|127@14780|629@15599|390@15605|148@15608|625@16170|386@16175|147@16170|605@17004|363@17008px|119@17007|607@17583px|368@17585|125@17585|629@18415|388@18410|145@18415px|631@18980|390@18990|151@18993|608@19816px|367@19814px|125@19811px|607@20386|368@20387|124@20385|603@21209|365@21215|125@21209|597@21779px|NaN@undefined"; gs="1"; fjedit="True"; dwxy="1"; 	
	//alert(fjxy);
	//读取经文定位文件****xy.htm;
	
