	fjxy="|627@162px|389@164px|145@164px|625@725px|387@721px|136@721px|625@1563px|385@1564px|140@1567px|630@2127px|376@2138px|133@2139px|623@2968|381@2966px|136@2968px|627@3530px|384@3530px|139@3533px|632@4372|392@4372|141@4380|630@4943|390@4941px|144@4941|626@5771|377@5772|135@5773|621@6339|378@6342|139@6341|635@7161|393@7167|149@7169|642@7729|399@7731px|144@7733|619@8580px|378@8578px|131@8577|621@9143|370@9141|124@9140|631@9976|390@9977|146@9977|635@10548px|391@10548px|148@10547|630@11382px|386@11384|136@11378px|628@11945|384@11943px|137@11945px|636@12781|384@12789|142@12793px|635@13346|393@13346px|149@13348px|621@14195px|382@14198px|138@14202px|628@14760px|388@14756|128@14773px|628@15599|387@15597px|142@15598|633@16163|381@16161px|137@16163|634@16997px|390@17003px|146@17000|630@17564px|389@17563px|147@17563px|632@18404|391@18404px|133@18405px|624@18975px|381@18972|138@18971px|641@19799|388@19799|144@19801|634@20364|394@20369px|153@20368px|620@21206px|379@21207px|135@21209px|626@21776|NaN@undefined"; gs="1"; fjedit="True"; dwxy="1"; 	
