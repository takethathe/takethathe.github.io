					} else {
						document.writeln("<div class='img_box'>");
						document.writeln("<img src='dd.gif' load_src='../pdf/pdf/"+fjml+"/"+PrefixInteger(j, 3)+".jpg'>");
						document.writeln("</div>");
					}
				}
		</script>
    </td>
  </TABLE>
</body>
</div>
