	fjxy="|619@176|382@174|145@170|631@740|393@738|136@734|613@1577|378@1576|138@1564|599@2139|357@2135|116@2134|620@2975|379@2972|141@2978|617@3548|379@3546|141@3546|618@4380|377@4380|131@4371px|598@4952|363@4947|125@4939|625@5775|375@5784|137@5783|610@6353|372@6350|128@6343|618@7174|383@7171|146@7176|630@7733|394@7737|133@7741|620@8579px|384@8576|144@8571|613@9140|368@9136|132@9140|609@9990|371@9991|130@9986|608@10552|374@10561|132@10556|626@11391|392@11386|134@11399|610@11964|376@11965|133@11961|620@12796|368@12798px|128@12799px|604@13365|371@13361|132@13369|623@14191|385@14195|144@14195|627@14759|391@14762px|131@14761|611@15609|378@15610|138@15604|613@16169|369@16167|126@16174|616@17005|374@17013|138@17013|608@17570|373@17572|137@17572|627@18423|394@18427|144@18416|616@18981|379@18980|140@18983|622@19808|375@19808|136@19808|616@20373|375@20374|134@20375|605@21210px|368@21208px|129@21209px|620@21774|382@21781|131@21776px|617@22611px|382@22610px|143@22613px|619@23191px|367@23195px|129@23190px|618@24001px|382@24005px|145@24001|NaN@undefined"; gs="1"; fjedit="True"; dwxy="1"; 	
