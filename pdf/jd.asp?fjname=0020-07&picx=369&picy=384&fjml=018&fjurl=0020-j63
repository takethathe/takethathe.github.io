		findDimensions();
		i=jwid
		for (i=jwid;i<strs.length ;i++ ) {
			lefts[i] =  parseInt(lefts[i]) + 1 ;
			//alert(jwid+"   "+strs.length+"  "+lefts[i]);
			document.getElementById('jw'+i).style.left = lefts[i] + "px";
		}
	}
	//↑上移经文
