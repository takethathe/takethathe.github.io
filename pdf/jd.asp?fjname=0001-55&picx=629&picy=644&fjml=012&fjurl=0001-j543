	fjxy="|634@163|395@164|154@161px|622@728px|381@727px|141@728|635@1561px|395@1560px|149@1560px|642@2118|390@2132|149@2129px|626@2969|380@2974|134@2973px|624@3535px|379@3536px|134@3532px|631@4374px|388@4377px|156@4376px|635@4934|397@4932px|156@4931px|630@5774px|399@5784px|158@5786px|636@6339|390@6340|148@6339|618@7171|376@7170px|132@7170|622@7736|380@7736|132@7737|638@8574|395@8576|150@8578|624@9143|389@9152|149@9159|625@9982|385@9982|143@9982|628@10546|389@10546|145@10546|637@11386|397@11384|167@11393px|634@11963px|391@11957px|147@11956|633@12787|398@12794|155@12795|639@13355|396@13355|153@13352|622@14183|378@14187|144@14194|624@14754px|382@14751px|141@14757|645@15587px|399@15591px|154@15591px|641@16149px|401@16149px|156@16151px|644@16990px|402@16994px|156@16992px|638@17554|395@17552|153@17552|623@18390px|384@18389px|153@18392px|636@18953px|396@18963px|149@18963px|638@19806|410@19809|165@19805px|637@20368px|396@20366px|151@20368px|628@21196|387@21198px|144@21198px|626@21759px|NaN@undefined"; gs="1"; fjedit="True"; dwxy="1"; 	
