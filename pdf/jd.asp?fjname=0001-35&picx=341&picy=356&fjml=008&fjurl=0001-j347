				for (j=1;j<6 ;j++ ) {
					s=PrefixInteger(i, 3)+PrefixInteger(j, 3);
					strs[i]=strs[i].replace(/<span>/,"<span id='s"+s+"'>");
					//if (i=24){alert(ierror+"--1--"+gs+"----"+s+"----"+j);}
				}
				//alert(i+"   "+strs[i]);
				
