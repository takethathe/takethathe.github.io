			document.getElementById('jw'+i).style.left = lefts[i] + "px";
		}
	}
	//↑上移经文
	function adds() {
		for (i=jwid;i<strs.length ;i++ ) {
			tops[i] =  parseInt(tops[i]) - 1 ;
			document.getElementById('jw'+i).style.top = tops[i]+ "px";
		}
	}
